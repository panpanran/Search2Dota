<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relmatchChild"
    style="@style/layout_full"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgMatchPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtMatchPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sssss"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgMatchHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtMatchHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sssss"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMatchLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="sssss"
            android:textColor="@android:color/background_light"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMatchKDA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="sssss"
            android:textColor="@android:color/background_light"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgMatchStat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtMatchStat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sssss"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnMatchLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtMatchLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="sssss"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnMatchRelated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtMatchRelated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Related"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>